@model PrehistoryWebsite.Domain.Tag
@using PrehistoryWebsite.Models
@using PrehistoryWebsite.Domain

@{
    ViewBag.Title = "Tag";
    Layout = "~/Views/Shared/Account/_AccountLayout.cshtml";
}


<h2>@Model.nameTag</h2>

<div class="panel panel-default">
    <div class="panel-body">

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.nameTag)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nameTag)
            @Html.ValidationMessageFor(model => model.nameTag)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.descriptionTag)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.descriptionTag)
            @Html.ValidationMessageFor(model => model.descriptionTag)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<table id="dataTables-example" class="table table-striped table-bordered table-hover dataTable no-footer" aria-describedby="dataTables-example_info">
    <thead>
        <tr role="row">
            <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 237px;" aria-label="Browser: activate to sort column ascending">Post</th>
            <th tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" style="width: 237px;" aria-label="Browser: activate to sort column ascending">Comentarios</th>

        </tr>
    </thead>
    <tbody>
        @if(Model.post.Count!=0){
            foreach (Post post in Model.post)
            {
                <tr>
                    <td>@post.title</td>
                    <td>@post.comment.Count</td>
                </tr>
            }
        }else{
            <tr><td>@SystemMessages.WarnningNoElements</td></tr>
        }

    </tbody>
</table>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
    </div>
</div>