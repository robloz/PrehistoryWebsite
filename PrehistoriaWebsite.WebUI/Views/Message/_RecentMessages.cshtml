@model IEnumerable<PrehistoryWebsite.Domain.Message>

<ul class="dropdown-menu dropdown-messages">

    @if (Model.Count() == 0)
    {
        @: <li><a href="@Url.Action("Index", "Message")">No hay ningún mensaje sin leer</a></li>
        @:  <li class="divider"></li>
    }
    else
    {
        foreach (var item in Model)
        {
        <li>
            <a href="@Url.Action("Details", "Message", new { id = item.id })">
                <div>
                    <strong>@item.email</strong>
                    <span class="pull-right text-muted">
                        <em>@Html.GetDate(item.dateSend)</em>
                    </span>
                </div>
                <div>@Html.DisplayNewsSearchSummary(item.descriptionMessage, 50)</div>
            </a>
        </li>
        <li class="divider"></li>
        }
    }

    <li>
        <a href="@Url.Action("Index", "Message")" class="text-center">
            <strong>Ver Todos Los Mensajes</strong>
            <i class="fa fa-angle-right"></i>
        </a>
    </li>
</ul>
<!-- /.dropdown-messages -->
